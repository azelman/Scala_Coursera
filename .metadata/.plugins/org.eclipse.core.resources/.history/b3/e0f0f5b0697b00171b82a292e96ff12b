object week61 {
  println("Welcome to the Scala worksheet")       //> Welcome to the Scala worksheet
  
  val col = 2                                     //> col  : Int = 2
  val row = 2                                     //> row  : Int = 2
  for {
  	c <- 0 until col
  	r <- 0 until row
  	if (c - col == r - row) || (c + col == r + row)
  	} yield (c, r)                            //> res0: scala.collection.immutable.IndexedSeq[(Int, Int)] = Vector((0,0), (1,1
                                                  //| ))
}