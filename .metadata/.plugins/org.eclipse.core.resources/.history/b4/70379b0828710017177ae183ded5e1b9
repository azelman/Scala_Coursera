object week5 {
  println("Welcome to the Scala worksheet")
  
  val nums = List(1, 2, 3, 4, 5, 6, 7)
  
  def removeAt(n: Int, xs: List[Int]): List[Int] = xs match {
  	case Nil => Nil
  	case x :: xs => if(n==0) xs else x :: removeAt(n-1, xs)
  }
  
  removeAt(2, nums)
  
  def flatten(xs: List[Any]): List[Any] = xs match {
  	case Nil => Nil
  	case (y :: ys) :: zs => flatten(y :: ys) ++ flatten(zs)
  	case y :: ys => y :: flatten(ys)
  	
  }
  

	flatten(List(List(1, 2), 3, List(4, List(5, 6))))
	flatten(List(4, List(5, 6)))
  def merge(xs: List[Int], ys: List[Int]): List[Int] =
  (xs, ys) match {
    case (x :: xs, y::ys) => if(x<y) xs ++ ys else merge(y :: xs, x:: ys)
  }
  
  def squareList(xs: List[Int]): List[Int] = xs match {
  	case Nil => xs
  	case y :: ys => y*y :: squareList(ys)
  }
  
  squareList(List(1,2,3,4,5,6))
  
  def squareList2(xs: List[Int]): List[Int] =
  	xs map(x => x*x)
  	
  squareList2(List(1,2,3,4,5,6))
  
  def pack[T](xs: List[T]): List[List[T]] = xs match {
  case Nil => Nil
  case x :: xs1 =>
  	val (first, rest) = xs span (z => z == x)
  	first :: pack(rest)
	}
	

  
  pack(List("a", "a", "a", "b", "c", "c", "a"))
  
  def encode[T](xs: List[T]): List[(T, Int)] =
  pack(xs) map (ys => (ys.head, ys.count)
	
	encode(List("a", "a", "a", "b", "c", "c", "a"))
}