object week61 {
  println("Welcome to the Scala worksheet")       //> Welcome to the Scala worksheet
  
  val col = 2                                     //> col  : Int = 2
  val row = 2                                     //> row  : Int = 2
  val n = 4                                       //> n  : Int = 4
  
  val queens = Vector(2,0)                        //> queens  : scala.collection.immutable.Vector[Int] = Vector(2, 0)
  
  def diags =
  for {
  	c <- 0 until n
  	r <- 0 until n
  	if (c - col == r - row) || (c + col == r + row)
  	} yield (c, r)                            //> diags: => scala.collection.immutable.IndexedSeq[(Int, Int)]
 
	 
  val q =  (0 until queens.length) zip queens.reverse
                                                  //> q  : scala.collection.immutable.IndexedSeq[(Int, Int)] = Vector((0,0), (1,2)
                                                  //| )
  !(diags exists (x => q.toSet contains x))       //> res0: Boolean = true
  
  diags                                           //> res1: scala.collection.immutable.IndexedSeq[(Int, Int)] = Vector((0,0), (1,1
                                                  //| ), (2,2), (3,3))
}

