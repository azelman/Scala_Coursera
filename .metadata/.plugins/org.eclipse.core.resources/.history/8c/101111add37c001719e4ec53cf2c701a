object polynomials {
  class Poly(terms0: Map[Int, Double]) {
  	def this(bindings: (Int, Double)*) = this (bindings.toMap)
  	val terms = terms0 withDefaultValue 0.0
  	
  	def + (other: Poly) = new Poly(terms ++ (other.terms map adjust))
  	def adjust (term: (Int, Double)): (Int, Double) = {
  		val (exp, coeff) = term
  		exp -> (coeff + terms(exp))
  	}
  	
  	override def toString =
  	  (for ((exp, coeff) <- terms.toList.sorted.reverse) yield coeff = "x^" + exp) mkString " + "
  		
  }
  
  
  val p1 = new Poly(1 -> 2.0, 3 -> 4.0, 5 -> 6.2) //> p1  : polynomials.Poly = polynomials$Poly@6aaa5eb0
  val p2 = new Poly(1 -> 2.0, 5 -> 3.8)           //> p2  : polynomials.Poly = polynomials$Poly@73f792cf
  
  p1 + p2                                         //> res0: polynomials.Poly = polynomials$Poly@60addb54
}